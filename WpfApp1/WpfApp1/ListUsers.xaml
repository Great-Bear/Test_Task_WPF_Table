<Page x:Class="WpfApp1.ListUsers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1" xmlns:col="clr-namespace:System.Collections;assembly=mscorlib" xmlns:local1="clr-namespace:Test_Task_WPF_Table.Classes" xmlns:local2="clr-namespace:WpfApp1.Classes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListUsers">
    <Page.Resources>
        <local2:DateConverter x:Key="DateConverter" />
    </Page.Resources>

    <Grid Background="White">
        <Grid Background="White" Margin="0,0,10,10">
            <ListView Name="UsersList" ItemsSource="{ Binding Users }" Margin="80,10,0,0" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding Name}">Name</GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding SurName}" Width="100">Surname</GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding CreatedOn, Converter={StaticResource DateConverter}}">CreatedOn</GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding SubcriedTo, Converter={StaticResource DateConverter}}">CreatedOn</GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Decription}">Description</GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button Name="DeleteBtn" Content="Delete" HorizontalAlignment="Left" Margin="10,12,0,0" VerticalAlignment="Top" Height="33" Width="65" FontSize="14"/>
            <Button Content="Edit" HorizontalAlignment="Left" Margin="10,53,0,0" VerticalAlignment="Top" Height="33" Width="65" FontSize="14" Visibility="Visible"/>
        </Grid>
    </Grid>
</Page>
