    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="\Dictionary\TextBox.xaml"/>
                <ResourceDictionary Source="\Dictionary\UserForm.xaml"/>
            </ResourceDictionary.MergedDictionaries>


            <Style x:Key="UserForm" TargetType="{x:Type Button}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Grid Name="container">
                                <Label Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=DataContext.Name, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="312,23,0,0" VerticalAlignment="Top" Height="34" Width="315" FontSize="14"/>


                                <TextBox Style="{StaticResource CustomTextBox}"
                                         Tag="Enter Name"
                                         Margin="275,225,0,0" 
                                         TextWrapping="Wrap"
                                         Width="323"
                                         HorizontalAlignment="Left"
                                         VerticalAlignment="Top"
                                         
                                         >
                                    <TextBox.Text>
                                        <Binding Path="Name" Mode="Default" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="True" >
                                            <Binding.ValidationRules>
                                                <DataErrorValidationRule ValidatesOnTargetUpdated="True" />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>

                                <TextBox HorizontalAlignment="Left" Margin="290,296,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"
                                         Validation.ErrorTemplate="{StaticResource validationFailed}">
                                    <TextBox.Text>
                                        <Binding Path="Name" Mode="Default" UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True"  >
                                            <Binding.ValidationRules>
                                                <DataErrorValidationRule ValidatesOnTargetUpdated="True"/>
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>

                                    <TextBox.Style>
                                        <Style>
                                            <Style.Triggers>
                                                <Trigger Property="Validation.HasError" Value="True">
                                                    <Setter Property="Control.Background" Value="red" />
                                                    <Setter Property="Control.ToolTip" Value="Error" />
                                                </Trigger>
                                                <Trigger Property="Validation.HasError" Value="False">
                                                    <Setter Property="Control.Background" Value="Blue" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>




    </Page.Resources>

