<Page x:Class="WpfApp1.AddUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Test_Task_WPF_Table.Classes"
      xmlns:userForm="WpfApp1.Classes.Helpers.DependencyProperty"
      xmlns:local3="clr-namespace:WpfApp1.ClassesConverter"
      xmlns:userForm1="clr-namespace:WpfApp1.Classes.Helpers.DependencyProperty"
      xmlns:MultipleConverter="clr-namespace:WpfApp1.Classes.Helpers.Converter.MultipleConvertor" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddUser">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="\Dictionary\UserForm.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="White" >

        <userForm1:UserForm 
            User="{Binding NewUser}"
            Title="Add User"
            LeftButtonCommand="{Binding ClearUserCommand}"
            RightButtonCommand="{Binding AddCommand}"
            x:Name="userForm"
            Style="{StaticResource UserForm}"
            FeedBackMessage="{Binding FeedBackMessage}"
            CanShowMessage="{Binding CanShowMessage}"/>

    </Grid>
</Page>
